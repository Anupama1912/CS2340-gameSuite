<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#F7EDDB">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/BackGame"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|left"
            android:orientation="vertical"
            android:src="@android:drawable/ic_menu_revert"
            android:textColor="#EDB8E8"
            android:background="#6B4F4F"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/infoP"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|right"
            android:background="#6B4F4F"
            android:textColor="@color/dButtonTxt"
            app:srcCompat="@android:drawable/ic_menu_info_details" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center_horizontal"
        android:text="Princess Run"
        android:textColor="#6B4F4F"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center_horizontal"
        android:text="Score: "
        android:textColor="#6B4F4F"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.example.gamesuite.myCanvas
        android:id="@+id/maze"
        android:layout_width="392dp"
        android:layout_height="425dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:padding="20dp"
        android:paddingBottom="0dp"></com.example.gamesuite.myCanvas>

